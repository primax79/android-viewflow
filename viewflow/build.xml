<project
    name="android-viewflow"
    basedir="."
    default="jar" >

    <description>
  	A view switcher library for Android  
    </description>
    <!-- set global properties for this build -->

    <property
        name="src"
        location="src" />

    <property
        name="bin"
        location="bin" />

    <target name="jar" >

        <jar
            basedir="bin/"
            destfile="android-viewflow.jar" >

            <include name="org/**" />
        </jar>
    </target>

</project>